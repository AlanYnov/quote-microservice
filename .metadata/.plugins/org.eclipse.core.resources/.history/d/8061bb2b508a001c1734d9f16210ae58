package com.lemal.library.repositories;

import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;

import org.springframework.context.annotation.Profile;

import com.lemal.library.models.Book;

/**
 * @author Vitaliy Fedoriv
 *
 */

public class SpringDataBookRepositoryImpl implements BookRepositoryOverride {
	
	@PersistenceContext
    private EntityManager em;

	@Override
	public void delete(Book quote) {
		String quoteId = quote.getId().toString();
		this.em.createQuery("DELETE FROM Visit visit WHERE quote_id=" + quoteId).executeUpdate();
		this.em.createQuery("DELETE FROM Book quote WHERE id=" + quoteId).executeUpdate();
        if (em.contains(quote)) {
            em.remove(quote);
        }
	}

}
